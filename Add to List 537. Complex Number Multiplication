class Solution {
    public String complexNumberMultiply(String a, String b) {
        String result = "";
        String[]A=a.split("\\+|i");
        String[]B=b.split("\\+|i");
        
        int a1 = Integer.parseInt(A[0]);
        int b1 = Integer.parseInt(A[1]);
        
        int a2 = Integer.parseInt(B[0]);
        int b2 = Integer.parseInt(B[1]);
        
        result =(a1*a2-b1*b2)+ "+"+(a1*b2+a2*b1) +"i";
        return result;
        
    }
}
   
